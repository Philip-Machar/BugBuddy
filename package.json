{
  "name": "bugbuddy",
  "displayName": "BugBuddy",
  "description": "Simplify and explain programming errors",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:bugbuddy.simplifyError",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bugbuddy.simplifyError",
        "title": "Simplify Error"
      }
    ],
    "configuration": {
      "title": "BugBuddy",
      "properties": {
        "bugbuddy.contextLines": {
          "type": "number",
          "default": 5,
          "description": "Number of surrounding code lines to include for context"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "node-fetch": "^3.3.2"
  }
}